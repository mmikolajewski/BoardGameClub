<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.2.xsd">
    <changeSet id="0001-1" author="mmikolajewski">
        <createTable tableName="game">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="title" type="VARCHAR(100)"/>
            <column name="release_year" type="INT"/>
            <column name="short_description" type="VARCHAR(200)"/>
            <column name="description" type="VARCHAR(10000)"/>
            <column name="youtube_id" type="VARCHAR(40)"/>
            <column name="poster" type="VARCHAR(80)"/>
            <column name="promoted" type="BOOLEAN"/>
            <column name="min_players" type="INT"/>
            <column name="max_players" type="INT"/>
        </createTable>
    </changeSet>
</databaseChangeLog>